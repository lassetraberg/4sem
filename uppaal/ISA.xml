<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.1//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_2.dtd'>
<nta>
	<declaration>// Place global declarations here.
chan accelerate, brake, update;
int velocity := 0, maxVelocity := 10;
clock x;
bool speeding := 0;</declaration>
	<template>
		<name x="5" y="5">vehicle</name>
		<declaration>// Place local declarations here.
</declaration>
		<location id="id0" x="-705" y="-374">
			<name x="-722" y="-408">drive</name>
		</location>
		<location id="id1" x="-867" y="-374">
			<name x="-969" y="-382">negative_acc</name>
		</location>
		<location id="id2" x="-535" y="-374">
			<name x="-518" y="-382">positive_acc</name>
		</location>
		<branchpoint id="id3" x="-705" y="-289">
		</branchpoint>
		<init ref="id0"/>
		<transition>
			<source ref="id3"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="-697" y="-323">update!</label>
		</transition>
		<transition>
			<source ref="id2"/>
			<target ref="id3"/>
			<nail x="-535" y="-289"/>
		</transition>
		<transition>
			<source ref="id1"/>
			<target ref="id3"/>
			<nail x="-867" y="-289"/>
		</transition>
		<transition>
			<source ref="id0"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="-680" y="-399">accelerate?</label>
			<label kind="assignment" x="-680" y="-365">velocity=velocity+1</label>
		</transition>
		<transition>
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="synchronisation" x="-773" y="-399">brake?</label>
			<label kind="assignment" x="-952" y="-357">velocity := velocity == 0 ? 0 : velocity-1</label>
		</transition>
	</template>
	<template>
		<name>isa</name>
		<declaration>// Place local declarations here.</declaration>
		<location id="id4" x="-926" y="-612">
			<name x="-951" y="-646">standby</name>
			<urgent/>
		</location>
		<location id="id5" x="-927" y="-442">
			<name x="-910" y="-451">active</name>
		</location>
		<location id="id6" x="-1003" y="-484">
			<name x="-1105" y="-493">negative_acc</name>
		</location>
		<location id="id7" x="-927" y="-527">
			<name x="-986" y="-518">evaluate</name>
		</location>
		<location id="id8" x="-841" y="-569">
			<name x="-824" y="-578">inactive</name>
		</location>
		<init ref="id4"/>
		<transition>
			<source ref="id7"/>
			<target ref="id4"/>
			<label kind="synchronisation" x="-1037" y="-595">brake?</label>
			<nail x="-986" y="-561"/>
			<nail x="-986" y="-612"/>
		</transition>
		<transition>
			<source ref="id8"/>
			<target ref="id4"/>
			<nail x="-875" y="-612"/>
		</transition>
		<transition>
			<source ref="id7"/>
			<target ref="id8"/>
			<label kind="guard" x="-892" y="-561">velocity&lt;=maxVelocity</label>
			<label kind="assignment" x="-892" y="-544">speeding:=false</label>
			<nail x="-892" y="-569"/>
		</transition>
		<transition>
			<source ref="id6"/>
			<target ref="id7"/>
			<nail x="-986" y="-527"/>
		</transition>
		<transition>
			<source ref="id7"/>
			<target ref="id5"/>
			<label kind="guard" x="-918" y="-510">velocity&gt;maxVelocity</label>
			<label kind="assignment" x="-918" y="-493">speeding:=true</label>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id7"/>
			<label kind="synchronisation" x="-918" y="-595">update?</label>
		</transition>
		<transition>
			<source ref="id5"/>
			<target ref="id6"/>
			<label kind="assignment" x="-1181" y="-442">velocity := velocity == 0 ? 0 : velocity-1</label>
			<nail x="-977" y="-442"/>
		</transition>
	</template>
	<template>
		<name>driver</name>
		<location id="id9" x="-136" y="-51">
			<name x="-144" y="-85">idle</name>
		</location>
		<init ref="id9"/>
		<transition>
			<source ref="id9"/>
			<target ref="id9"/>
			<label kind="synchronisation" x="-68" y="-85">accelerate!</label>
			<nail x="-85" y="-85"/>
			<nail x="-68" y="-51"/>
			<nail x="-93" y="-34"/>
		</transition>
	</template>
	<system>// Place template instantiations here.
//Process = Template();
// List one or more processes to be composed into a system.
system vehicle, driver, isa;</system>
	<queries>
		<query>
			<formula>A[] not deadlock</formula>
			<comment></comment>
		</query>
		<query>
			<formula></formula>
			<comment></comment>
		</query>
		<query>
			<formula>E&lt;&gt; vehicle.drive</formula>
			<comment></comment>
		</query>
	</queries>
</nta>
